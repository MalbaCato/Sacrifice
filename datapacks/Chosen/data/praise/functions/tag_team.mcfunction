# Add tag OnTeam to all players on the same team as @s

tag @a remove OnTeam
execute as @s[tag=Chosen] run tag @a[team=chosen] add OnTeam
execute as @s[tag=Servants] run tag @a[team=servants] add OnTeam
execute as @s[tag=Fallen] run tag @a[team=fallen] add OnTeam
execute as @s[tag=Devout] run tag @a[team=devout] add OnTeam
execute as @s[tag=Clergy] run tag @a[team=clergy] add OnTeam
execute as @s[tag=Collectors] run tag @a[team=collectors] add OnTeam
execute as @s[tag=Forsaken] run tag @a[team=forsaken] add OnTeam
execute as @s[tag=Believers] run tag @a[team=believers] add OnTeam
